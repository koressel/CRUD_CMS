      <main class="col-sm-12 main mt-3">
        <div class="row">
          <div class="col col-sm-12 col-md-6 offset-md-3">
            <div class="jumbotron">
              <p id="successMSG">Your artwork has been saved and uploaded to your website. </p>
              <div class="col col-sm-12">
                <form id="new-product-form">
                  <div class="form-group ">
                    <label for="title">Title</label>
                    <input type="text" class="form-control " id="title-input" name="title" value="Hello World" required>
                    <div class="invalid-feedback" style="width: 100%;">
                      A title is required.
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="dimensions">Dimensions</label>
                    <input type="text" class="form-control" id="dimensions-input" value="4x3x3" name="dimensions"
                      placeholder="width x height x depth" required>
                    <div class="invalid-feedback" style="width: 100%;">
                      Dimensions are required.
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="price">Price</label>
                    <div class="input-group">
                      <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                      </div>
                      <input type="number" class="form-control" id="price-input" name="price" value="44" step="0.5"
                        required>
                      <div class="invalid-feedback" style="width: 100%;">
                        A price is required.
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="shipping">Shipping</label>
                    <div class="input-group">
                      <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                      </div>
                      <input type="number" class="form-control" id="shipping-input" value="24" name="shipping"
                        step="0.5" required>
                      <div class="invalid-feedback" style="width: 100%;">
                        A shipping amount is required.
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="image">Image</label><br />
                    <input id="product-image-input" type="file" name="image" accept="image/*">
                  </div>
                  <button id="submit-button" class="btn btn-success mt-4">Save</button>
              </div>
              </form>
            </div>
            <div class="border-bottom mb-4"></div>

          </div>
